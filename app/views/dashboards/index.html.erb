<section class="content-header">
  <h1>Dashboard</h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>
                  <%= render partial: 'layouts/report_balance', locals: { balance: current_user.total_balance,
                                                                          text_color: 'white' } %>
                </h3>
                <p>
                    Saldo de horas
                </p>
            </div>
            <div class="icon">
                <i class="fa fa-clock-o"></i>
            </div>
            <%= link_to reports_path, class: 'small-box-footer' do %>
                Mais detalhes <i class="fa fa-arrow-circle-right"></i>
            <% end %>
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>
                    <%= current_user.hours_per_day %>h
                </h3>
                <p>
                    De trabalho por dia
                </p>
            </div>
            <div class="icon">
                <i class="fa fa-user"></i>
            </div>
            <%= link_to edit_user_registration_path, class: 'small-box-footer' do%>
              Alterar <i class="fa fa-arrow-circle-right"></i>
            <% end %>
        </div>
      </div>
      <% if @next_entry %>
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                  <h3>
                    <%= l @next_entry, format: :only_time %>
                  </h3>
                    <p>
                      Pr√≥xima Entrada
                    </p>
                </div>
                <div class="icon">
                    <i class="fa fa-bell-o"></i>
                </div>
                <p class="small-box-footer">No dia <strong><%= l @next_entry.to_date %></strong></p>
            </div>
        </div>
      <% end %>
  </div>
</section>
