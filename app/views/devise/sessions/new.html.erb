<div class="container form-container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="form-title">
        <h1 class="text-center login-title">Entrar</h1>
      </div>
      <div class="account-wall">
          <%= simple_form_for resource, as: resource_name,
                                        url: session_path(resource_name),
                                        wrapper: :vertical_form,
                                        html: { class: 'form-signin' } do |f| %>

            <%= devise_alert_messages! %>
            <%= flash[:notice] %>

            <%= f.input :email, placeholder: 'Email', label: false %>
            <%= f.input :password, placeholder: 'Senha', label: false %>

            <%= f.submit "Entrar", class: 'btn btn-lg btn-primary btn-block' %>
          <% end %>
      </div>
      <div class="text-center new-account">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
