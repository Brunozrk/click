<div class="container form-container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="form-title">
        <h1 class="text-center login-title">Mudar a senha</h1>
      </div>
      <div class="account-wall">
          <%= simple_form_for resource, as: resource_name,
                                        url: password_path(resource_name),
                                        wrapper: :vertical_form,
                                        html: { method: :put, class: 'form-signin' } do |f| %>

            <%= f.hidden_field :reset_password_token %>
            <%= f.input :password, placeholder: 'Senha', label: false %>
            <%= f.input :password_confirmation, placeholder: 'ConfirmaÃ§Ã£o de Senha', label: false %>

            <%= f.submit "Salvar", class: 'btn btn-lg btn-primary btn-block' %>
          <% end %>
      </div>
      <div class="text-center new-account">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


