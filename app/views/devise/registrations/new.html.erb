<div class="form-box" id="login-box">
  <div class="header">Cadastro</div>

  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), wrapper: :vertical_form do |f| %>
    <div class="body bg-gray">

      <%= devise_error_messages! %>

      <%= f.input :email, placeholder: 'Email', label: false %>
      <%= f.input :first_name, placeholder: 'Nome', label: false %>
      <%= f.input :last_name, placeholder: 'Sobrenome', label: false %>
      <%= f.input :password, placeholder: 'Senha', label: false %>
      <%= f.input :password_confirmation, placeholder: 'ConfirmaÃ§Ã£o de Senha', label: false %>

    </div>

    <div class="footer">
      <%= f.submit "Cadastro", class: 'btn bg-olive btn-block' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
