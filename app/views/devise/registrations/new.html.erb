<div class="container form-container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="form-title">
        <h1 class="text-center login-title">Cadastro</h1>
      </div>
      <div class="account-wall">
          <%= simple_form_for resource, as: resource_name,
                                        url: registration_path(resource_name),
                                        wrapper: :vertical_form,
                                        html: { class: 'form-signin' }  do |f| %>

            <%= f.input :email, placeholder: 'Email', label: false %>
            <%= f.input :first_name, placeholder: 'Nome', label: false %>
            <%= f.input :last_name, placeholder: 'Sobrenome', label: false %>
            <%= f.input :password, placeholder: 'Senha', label: false %>
            <%= f.input :password_confirmation, placeholder: 'ConfirmaÃ§Ã£o de Senha', label: false %>

            <%= f.submit "Cadastro", class: 'btn bg-olive btn-primary btn-block' %>
          <% end %>
      </div>
      <div class="text-center new-account">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


